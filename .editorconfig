# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2

# CSS files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Docker files
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 4

# Database files
[*.sql]
indent_style = space
indent_size = 2

# Template files
[*.{j2,jinja2,template}]
indent_style = space
indent_size = 2

# Documentation files
[docs/**]
max_line_length = 80

# Test files
[{test,tests,testing}/**]
indent_size = 4

# Migration files
[*/migrations/*.py]
indent_size = 4
max_line_length = 120

# Requirements files
[requirements{,-*}.txt]
indent_size = 4

# Git files
[.git*]
indent_style = tab

# CI/CD files
[.github/workflows/*.{yml,yaml}]
indent_size = 2

# Environment files
[.env{,.*}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Ignore minified files
[**.min.*]
indent_style = ignore
insert_final_newline = ignore
trim_trailing_whitespace = false
